<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_marginBaseline="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/source"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center|left"
                        android:text="   Source Language"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/sourceEng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="English" />

                    <RadioButton
                        android:id="@+id/sourceSpan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spanish" />

                    <RadioButton
                        android:id="@+id/sourceGerm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="German" />

                    <RadioButton
                        android:id="@+id/sourceDetect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Auto-Detect" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/transLang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center|left"
                        android:text="   Translation Language"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/transSpan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spanish" />

                    <RadioButton
                        android:id="@+id/transGerm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="German" />

                    <RadioButton
                        android:id="@+id/transEng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="English" />

                    <RadioButton
                        android:id="@+id/transRand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Random!" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:editable="false"
                android:gravity="center"
                android:hint="Translation Will Appear Here..."
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:orientation="horizontal">

            <EditText
                android:focusable="true"
                android:id="@+id/enterText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Write Something..."
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>